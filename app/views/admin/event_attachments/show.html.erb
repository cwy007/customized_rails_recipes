<h1 class="text-center"><%= @event.name %> / Attachment</h1>

<div>
  <%= image_tag(@attachment.attachment.url(:medium), :class => "thumbnail", :style => "margin: 30px auto;") %>

  <% if @attachment.description.present? %>
    <h2 class="danger"><%= @attachment.description %></h2>
  <% end %>
</div>

<br>
<p>
  <%= link_to "Back", admin_event_attachments_path(@event), :class => "btn btn-primary" %>
  <%= link_to "Edit", edit_admin_event_attachment_path(@event, @attachment), :class => "btn btn-default" %>

</p>
